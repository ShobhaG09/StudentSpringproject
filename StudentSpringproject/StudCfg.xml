<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
 <beans>
        
        <bean name="student" class="com.spring.Student">
        	<constructor-arg value="01"></constructor-arg>
        	<constructor-arg value="Shobha"></constructor-arg>
        	<constructor-arg value="8007671334"></constructor-arg>
        	<constructor-arg ref="date"></constructor-arg>
        	<constructor-arg ref="address"></constructor-arg>
