        </bean>
        
        <bean name="date" class="java.util.Date">
			<constructor-arg value="2015"></constructor-arg>
			<constructor-arg value="0"></constructor-arg>
			<constructor-arg value="1"></constructor-arg>
			<constructor-arg value="05"></constructor-arg>
			<constructor-arg value="30"></constructor-arg>
			<constructor-arg value="45"></constructor-arg>
		</bean>	

		<bean name="address" class="com.spring.Address">
			<constructor-arg value="100"></constructor-arg>
			<constructor-arg value="Solapur "></constructor-arg>
			<constructor-arg value="413002"></constructor-arg>
		</bean>
</beans>